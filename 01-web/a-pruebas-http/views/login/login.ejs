<%- include('../compartido/cabecera')%>
<div class="container">
    <h1>Login</h1>
    <p>Ingresa tus credenciales</p>
    <form action="http://localhost:4000/usuario/login"
    method="POST"
    >
    <div class="form-group">
        <label for="usernameID">
            Username
        </label>
        <input id="usernameIDID"
               type="text"
               name="username"
               placeholder="Ej: daniel0113tg"
               title="Ingresar nombre de Usuario"
               class="form-control">
        <small id="nombreIDHelp"
               class="form-text text-muted">
            Ingresa el nombre de usuario
        </small>
    </div>
    <div class="form-group">
        <label for="passwordID">
            Password
        </label>
        <input id="passwordID"
               type="password"
               name="password"
               placeholder="Ej: ********"
               title="Ingresar el password del usuario"
               class="form-control">
        <small id="passwordIDHelp"
               class="form-text text-muted">
            Ingresa tu password
        </small>
    </div>
    <button type="submit"
            class="btn btn-success">
        Login
    </button>
    <button type="reset"
            class="btn btn-secondary">
        Limpiar Formulario
    </button>
    </form>
</div>
